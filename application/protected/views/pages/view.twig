{% extends "//views/layouts/public_base.twig" %}
{% block title %}
    {% if model.html_title %}
        {{ model.html_title }}
    {% else %}
        {{ model.title }}
    {% endif %}
{% endblock %}

{% block description %}
    {{ model.html_description }}
{% endblock %}

{% block keywords %}
    {{ model.htm_keywords }}
{% endblock %}

{% block content %}

	<div class="news-container">
	
    	<div class="nav">
			
            {% set breadcrumbs = model.getParentAsArray(model.id) %}
            <a href="/"> Главная  </a>
            {% for crumb in  model.getParentAsArray(model.id) %}
                <a href="{{ crumb.url }}"> {{ crumb.name }} </a>
            {% endfor %}
