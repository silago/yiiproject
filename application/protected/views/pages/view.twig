		    -->
        </div>

    

		<div class="title">
			<p>{{ model.title }}</p>	
			<img src="/application/images/title-ln.jpg" height="12" width="20" alt="" />
		</div>
					
			{{ model.content }}
		
</div>

{%endblock%} 



